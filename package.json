{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:accessibility": "vitest --run src/test/accessibility.test.tsx",
    "test:performance": "vitest --run src/test/performance.test.tsx",
    "test:integration": "vitest --run src/test/integration.test.tsx",
    "bundlesize": "bundlesize",
    "bundlesize:check": "npm run build:production && bundlesize",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless\"",
    "perf:test": "node scripts/performance-test.js",
    "perf:audit": "npm run build && npm run start & sleep 5 && npm run lighthouse && pkill -f 'next start'",
    "perf:monitor": "npm run dev & sleep 3 && open http://localhost:3000",
    "deploy:preview": "vercel",
    "deploy:production": "vercel --prod",
    "validate": "npm run type-check && npm run lint && npm run test && npm run bundlesize:check",
    "build:optimize": "node scripts/build-optimize.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.3",
    "axe-core": "^4.10.3",
    "bundlesize2": "^0.0.35",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.2.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
